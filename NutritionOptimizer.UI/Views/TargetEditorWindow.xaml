<Window x:Class="NutritionOptimizer.UI.Views.TargetEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="목표치 편집"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0"
                   Text="{Binding IsEditMode, Converter={StaticResource EditModeTitleConverter2}}"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 16" />

        <!-- 입력 폼 -->
        <StackPanel Grid.Row="1">
            <!-- 영양소 키 -->
            <TextBlock Text="영양소 키 * (예: kcal, protein_g, sodium_mg)" FontWeight="SemiBold" />
            <TextBox Text="{Binding NutrientKey, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding IsEditMode}"
                     Margin="0 4 0 4" />
            <TextBlock Text="한글명: 칼로리, 단백질, 지방, 탄수화물, 식이섬유, 당류, 나트륨 등"
                       FontSize="10"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0 0 0 12" />

            <!-- 최소값 -->
            <TextBlock Text="최소값 (선택사항)" FontWeight="SemiBold" />
            <TextBox Text="{Binding MinValue, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 4 0 12" />

            <!-- 최대값 -->
            <TextBlock Text="최대값 (선택사항)" FontWeight="SemiBold" />
            <TextBox Text="{Binding MaxValue, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 4 0 12" />

            <!-- 권장값 -->
            <TextBlock Text="권장값 (RDA - 선택사항)" FontWeight="SemiBold" />
            <TextBox Text="{Binding RecommendedValue, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 4 0 12" />

            <!-- 충분값 -->
            <TextBlock Text="충분값 (AI - 선택사항)" FontWeight="SemiBold" />
            <TextBox Text="{Binding SufficientValue, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 4 0 12" />

            <!-- 단위 -->
            <TextBlock Text="단위 * (예: g, mg, kcal)" FontWeight="SemiBold" />
            <TextBox Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 4 0 12" />

            <TextBlock Text="※ 최소값과 최대값 중 하나 이상 입력해주세요."
                       FontSize="11"
                       Foreground="Gray"
                       Margin="0 8 0 0" />
        </StackPanel>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 16 0 0">
            <Button Content="저장"
                    Width="80"
                    Height="32"
                    Margin="0 0 8 0"
                    Click="SaveButton_Click" />
            <Button Content="취소"
                    Width="80"
                    Height="32"
                    Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
