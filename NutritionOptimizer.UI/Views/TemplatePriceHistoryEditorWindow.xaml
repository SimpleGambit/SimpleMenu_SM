<Window x:Class="NutritionOptimizer.UI.Views.TemplatePriceHistoryEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="가격 이력 추가/수정"
        Height="500"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0"
                   Text="가격 이력 정보 입력"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 16" />

        <!-- 입력 폼 -->
        <StackPanel Grid.Row="1">
            <!-- 템플릿 이름 (읽기 전용) -->
            <TextBlock Text="템플릿" FontWeight="SemiBold" />
            <TextBox Text="{Binding TemplateName}"
                     IsReadOnly="True"
                     Background="#F5F5F5"
                     Margin="0 4 0 12" />

            <!-- 적용 날짜 -->
            <TextBlock Text="적용 날짜 *" FontWeight="SemiBold" />
            <DatePicker SelectedDate="{Binding EffectiveDate, Converter={StaticResource DateOnlyConverter}}"
                        Margin="0 4 0 12" />

            <!-- 단위 -->
            <TextBlock Text="단위 * (예: 1kg, 500g, 2kg)" FontWeight="SemiBold" />
            <TextBox Text="{Binding WeightUnit, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 4 0 12" />

            <!-- 가격 -->
            <TextBlock Text="가격(원) *" FontWeight="SemiBold" />
            <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 4 0 12" />

            <!-- 안내 문구 -->
            <TextBlock Text="💡 이 가격은 위에 입력한 단위(예: 1kg)에 대한 총 가격입니다"
                       Foreground="Gray"
                       FontSize="11"
                       TextWrapping="Wrap"
                       Margin="0 8 0 0" />
        </StackPanel>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 16 0 0">
            <Button Content="저장"
                    Width="80"
                    Height="32"
                    Margin="0 0 8 0"
                    Click="SaveButton_Click" />
            <Button Content="취소"
                    Width="80"
                    Height="32"
                    Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
