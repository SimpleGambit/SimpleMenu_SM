<Window x:Class="NutritionOptimizer.UI.Views.SavedDietSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="저장된 식단 선택"
        Height="450"
        Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0"
                   Text="저장된 식단 선택"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 16" />

        <!-- 식단 목록 -->
        <DataGrid Grid.Row="1"
                  x:Name="DietsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  MouseDoubleClick="DietsDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="식단명" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="생성일" Binding="{Binding CreatedDate, StringFormat=yyyy-MM-dd}" Width="120" />
                <DataGridTextColumn Header="총 비용" Binding="{Binding TotalCost, StringFormat={}{0:N0}}" Width="100" />
                <DataGridTextColumn Header="메모" Binding="{Binding Notes}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 16 0 0">
            <Button Content="선택"
                    Width="80"
                    Height="32"
                    Margin="0 0 8 0"
                    Click="SelectButton_Click" />
            <Button Content="취소"
                    Width="80"
                    Height="32"
                    Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
