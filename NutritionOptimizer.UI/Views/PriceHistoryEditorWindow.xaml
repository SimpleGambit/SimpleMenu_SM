<Window x:Class="NutritionOptimizer.UI.Views.PriceHistoryEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="가격 이력 추가"
        Height="360"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0"
                   Text="가격 이력 추가"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 16" />

        <!-- 입력 폼 -->
        <StackPanel Grid.Row="1">
            <!-- 음식 정보 -->
            <TextBlock Text="음식" FontWeight="SemiBold" />
            <TextBlock Text="{Binding FoodName}"
                       FontSize="14"
                       Foreground="DarkBlue"
                       Margin="0 4 0 12" />

            <!-- 적용 날짜 -->
            <TextBlock Text="적용 시작 날짜 *" FontWeight="SemiBold" />
            <DatePicker SelectedDate="{Binding EffectiveDate, Converter={StaticResource DateOnlyConverter}}"
                        Margin="0 4 0 12" />

            <!-- 가격 -->
            <TextBlock Text="가격(₩/100g) *" FontWeight="SemiBold" />
            <TextBox Text="{Binding PricePer100g, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 4 0 12" />

            <TextBlock Text="※ 이 날짜부터 해당 가격이 적용됩니다."
                       FontSize="11"
                       Foreground="Gray"
                       Margin="0 8 0 0" />
        </StackPanel>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 16 0 0">
            <Button Content="저장"
                    Width="80"
                    Height="32"
                    Margin="0 0 8 0"
                    Click="SaveButton_Click" />
            <Button Content="취소"
                    Width="80"
                    Height="32"
                    Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
